{
  "name": "vscode-workspace-tools",
  "displayName": "vscode-workspace-tools",
  "description": "Additional options for vscode workspaces",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "keybindings": {
      "command": "workbench.action.openWorkspaceConfigFile",
      "key": "cmd+shift+,"
    },
    "commands": [
      {
        "command": "vscode-workspace-tools.add",
        "title": "Add to Workspace"
      },
      {
        "command": "vscode-workspace-tools.rename",
        "title": "Rename in Workspace"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vscode-workspace-tools.add",
          "when": "explorerResourceIsFolder && !explorerResourceIsRoot",
          "group": "2_workspace"
        },
        {
          "command": "vscode-workspace-tools.rename",
          "when": "explorerResourceIsFolder && explorerResourceIsRoot && workbenchState == 'workspace'",
          "group": "2_workspace"
        }
      ]
    }
  },
  "scripts": {
    "build": "webpack",
    "dev": "webpack --watch",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:w": "jest --watch",
    "version": "echo $npm_package_version"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
